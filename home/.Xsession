#!/bin/sh

export PATH="$HOME/.local/bin:$HOME/.bin:/sbin/:$PATH"

xrdb ~/.Xresources
setxkbmap -layout pl -option caps:super ; xmodmap ~/.Xmodmap
xbindkeys

#xscreensaver --no-splash &
#xss-lock -l --ignore-sleep -- xscreensaver-command --lock
xss-lock -l slock &


# dex -ae dwm &
dwmstatus &
~/.fehbg

# eval $(ssh-agent)

# ~/.localfixes

# fix long delay when starting GTK programs
export XDG_CURRENT_DESKTOP=gtk
dbus-update-activation-environment --systemd XDG_CURRENT_DESKTOP=$XDG_CURRENT_DESKTOP

type dbus-run-session && exec dbus-run-session dwm
type dbus-launch && exec dbus-launch dwm
exec dwm
